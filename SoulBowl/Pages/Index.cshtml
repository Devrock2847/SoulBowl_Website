@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div id="alignmentbox">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
                <img class="d-block w-100" img src="~/img/main_chorizo_pizza.png" id="img1" />
            </div>
        <div class="carousel-item">
                <img class="d-block w-100" img src="~/img/main_loaded_wedges.jpg" id="img2" />
            </div>
        <div class="carousel-item">
			    <img class="d-block w-100" img src="~/img/main_chicken_skewer.jpg" id="img3"/> 
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only"></span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only"></span>
      </a>
    </div>
</div>
<div id="allignmentBoxTwo">
    <button type="button" class="btn btn-dark" asp-area="" href="/Menu" id="menuButton">> See Full Menu <</button>
</div>