@page
@model SoulBowl.Pages.ContactModel
@{
	ViewData["Title"] = "Contact page";
}
<div id="contactCenter">
    <div id="contactBackground">
        <div class="text-center">
            <h1 id="contactHeader">Contact Us at Soul Bowl</h1>
            <p id="contactMessage">Please use our contact form below to get in touch with us</p>
            <p>@Model.myStatus</p>
        </div>

        <form method="post">
            <div class="form-group" id="custNameInput">
                <label for="customername" id="custNameInputLabel">Name</label>
                <input asp-for="customername" type="text" class="form-control" id="customername" placeholder="Your name" />
            </div>
            <div class="form-group" id="custEmailInput">
                <label for="customeremail" id="custEmailInputLabel">Email</label>
                <input asp-for="customeremail" type="text" class="form-control" id="customeremail" placeholder="Your Email" />
            </div>
            <div class="form-group" id="custMessageinput">
                <label for="customermessage" id="custMessageInputLabel">Message</label>
                <textarea asp-for="customermessage" id="customermessage" class="form-control" placeholder="Enter your message here"></textarea>
            </div>
            <button type="submit" class="btn btn-primary" id="contactSubmitButton">Submit</button>
        </form>
    </div>
</div>
<div id="contactSpacer">

</div>

