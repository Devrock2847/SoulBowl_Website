@page
@model SoulBowl.Pages.Menus.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div id="createCenter">
    <div id="createBackground">


        <h1 id="createTitle">Add new item to the menu</h1>
        <div id="createMenuNoteBox">
            <p id="creatMenuNote">
               The menu displays different catagories based on the MenuType,<br />
               Please use the following MenuTypes when creating a new item,<br />
               'ST' = Starters<br />
               'MN' = Mains<br />
               'DS' = Desserts
            </p>
        </div>
        <hr />
        <div class="row" id="createMainRow">
            <div class="col-md-10">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MenuItem.MenuType" id="createMenuTypeLabel" class="control-label"></label>
                        <input asp-for="MenuItem.MenuType" class="form-control" />
                        <span asp-validation-for="MenuItem.MenuType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuItem.ItemName" id="createMenuNameLabel" class="control-label"></label>
                        <input asp-for="MenuItem.ItemName" class="form-control" />
                        <span asp-validation-for="MenuItem.ItemName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuItem.ItemDescription" id="createMenuDescriptionLabel" class="control-label"></label>
                        <input asp-for="MenuItem.ItemDescription" class="form-control" />
                        <span asp-validation-for="MenuItem.ItemDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuItem.Allergens" id="createMenuAllergensLabel" class="control-label"></label>
                        <input asp-for="MenuItem.Allergens" class="form-control" />
                        <span asp-validation-for="MenuItem.Allergens" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuItem.Price" id="createMenuPriceLabel" class="control-label"></label>
                        <input asp-for="MenuItem.Price" class="form-control" />
                        <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MenuItem.ImageDescription" id="createMenuImageDescLabel" class="control-label">Image Description (Alt-text)</label>
                        <input asp-for="MenuItem.ImageDescription" class="form-control" />                
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuItem.ImageData" id="createMenuImageDataLabel" class="control-label">Image Upload</label>
                        <input type="file" id="file1"
                            name="file1"
                            multiple="multiple" />
                    </div>
                    <div class="form-group">
                        <input id="createButtonOnPage" type="submit" value="Create" asp-page="/Admin/IndexAdmin" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a id="returnButton" asp-page="/Admin/IndexAdmin">Return</a>
        </div>
    </div>
</div>
<div id="adminCreateSpacer">
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
